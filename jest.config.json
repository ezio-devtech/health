{
  "testEnvironment": "node",
  "testRunner": "jasmine2",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "testMatch": [
    "**/src/**/*.test.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "projects": [
    "packages/core",
    "packages/infra",
    "packages/server",
    "packages/ui"
  ]
}