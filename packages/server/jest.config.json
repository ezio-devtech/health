{
  "testEnvironment": "node",
  "testRunner": "jasmine2",
  "transform": {
    "^.+\\.(js|ts)$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "testMatch": [
    "**/src/**/*.test.ts"
  ],
  "globals": {
    "ts-jest": {
      "babel": true,
      "tsConfig": "tsconfig.json"
    }
  }
}